
#include <LiquidCrystal.h>  
LiquidCrystal lcd(8, 9, 4, 5, 6, 7); 


 int porta;
 String botao;
 int estado = 1;
 int ponto = 0;
 boolean flag = false;
 int aux = 0; 



void setup()   {  
  lcd.begin(16, 2); 
}  

void loop()  { 

  switch (estado) {

    case 1: 
            ponto = 0;
            
            lcd.clear();
            lcd.home();  
            lcd.print("Bem vindo ao"); 
            lcd.setCursor(0,1);  
            lcd.print("JOGO QUIZ RACIAL!"); 
            
            delay (3000);
            
            lcd.clear();
            lcd.home();  
            lcd.print("DESENVOLVIDO POR"); 
            lcd.setCursor(0,1);  
            lcd.print("GRUPO 13!"); 
             
            delay (3000); 
     
            lcd.clear();
            lcd.home();  
            lcd.print(" Use as Teclas"); 
            lcd.setCursor(0,1);  
            lcd.print("   UP e DOWN");
             

            delay (3000);
    
    		lcd.clear();
            lcd.home();  
            lcd.print("Para escolher a"); 
            lcd.setCursor(0,1);  
            lcd.print("resposta correta"); 

            delay (3000);
    
    		lcd.clear();
            lcd.home();  
            lcd.print("E a tecla LEFT"); 
            lcd.setCursor(0,1);  
            lcd.print("para retornar");
    
    		delay (3000);
    
    		lcd.clear();
            lcd.home();  
            lcd.print("Tecle SELECT p/"); 
            lcd.setCursor(0,1);  
            lcd.print("   confirmar"); 

            delay (3000);
    
    		lcd.clear();
            lcd.home();  
            lcd.print("Iniciando o Jogo"); 
            lcd.setCursor(0,1);  
            lcd.print("   Boa Sorte!"); 

            delay (3000);

            estado = 2;

            break;
         
    case 2: 
            lcd.clear();
            lcd.home();  
            lcd.print("Precione Select "); 
            lcd.setCursor(0,1);  
            lcd.print("Para inciar JOGO"); 

            porta = analogRead (0);
            lcd_Shield();

            if (botao == "Select"){
              estado = 3;
            }

            else if (botao != "vazio"){
              tecla_Error();
            }
    
    		delay (200);

            break;
 
    case 3: 
            lcd.clear();
            lcd.home();  
            lcd.print("Quiz 1:"); 
            lcd.setCursor(0,1);  
            lcd.print("EM QUAL ANO FOI A LEI AUREA ENTROU EM VIGOR?"); 
            
    		delay (2000);
    
            for(int cont=0; cont <15; cont++){
    			lcd.scrollDisplayLeft();
    			delay (200); 
  			}
    		
    		delay (2000);
    
    		lcd.clear();
            lcd.home();  
            lcd.print("1888l ()"); 
            lcd.setCursor(0,1);  
            lcd.print("1788 ()");
    		
    		delay (200);
    		estado = 4;
    		aux =0; 
    
    		break;
    
    case 4:
            porta = analogRead (0);
            lcd_Shield();

            if (botao == "Cima"){
              
              lcd.clear();
              lcd.home();  
              lcd.print("1888 (X)"); 
              lcd.setCursor(0,1);  
              lcd.print("1788 ()");
              
              flag = true;
              aux++;

            }

            else if (botao == "Baixo"){
              
              lcd.clear();
              lcd.home();  
              lcd.print("1888 ()"); 
              lcd.setCursor(0,1);  
              lcd.print("1788 (X)");
              
              flag = false;
              aux++;
              
            }
    
    		else if (botao == "Select"){
              if (aux !=0){
                if(flag == true){
                  lcd.clear();
              	  lcd.home();  
                  lcd.print("Acertouuu!!!"); 
                  lcd.setCursor(0,1);  
                  lcd.print("sabe dmss");
                  
                  ponto++;
                  estado = 5;	
                  delay (3000);
                }
                
                if(flag == false){
                  lcd.clear();
              	  lcd.home();  
                  lcd.print("Errou"); 
                  lcd.setCursor(0,1);  
                  lcd.print("ESTUDE MAIS!");
                  
                  estado = 5;	
                  delay (3000);
                }
              }
              
              else{
                lcd.clear();
                lcd.home();  
                lcd.print("  Poxa!"); 
                lcd.setCursor(0,1);  
                lcd.print("Era facil!!!");
                
				estado = 5;	
                delay (3000);
              }
            }
    
    		else if (botao == "Esquerda"){
              estado = 3;
            }

            else if (botao != "vazio"){
              tecla_Error();
            }

            break;

   
    case 5: 
            lcd.clear();
            lcd.home();  
            lcd.print("Total: "); 
            lcd.setCursor(7,0);  
            lcd.print(ponto); 
            lcd.setCursor(9,0);  
            lcd.print("Pto");

            if (ponto >= 1){
              lcd.setCursor(0,1);  
              lcd.print("Meus parabeeens");
            }

            if (ponto < 1){
              lcd.setCursor(0,1);  
              lcd.print("tenta outra ");
              } 
               delay (3000);
              estado = 6;
    
         break;
    
     case 6: 
            lcd.clear();
            lcd.home();  
            lcd.print("Quiz 2:"); 
            lcd.setCursor(0,1);  
            lcd.print("Qual foi o maior autor negro?"); 
            
    		delay (2000);
    
            for(int cont=0; cont <19; cont++){
    			lcd.scrollDisplayLeft();
    			delay (200); 
  			}
    		
    		delay (2000);
    
    		lcd.clear();
            lcd.home();  
            lcd.print("Machado de assis ()"); 
            lcd.setCursor(0,1);  
            lcd.print("Castro Alves ()");
    		
    		delay (200);
    		estado = 7;
    		aux =0; 
    
    		break;
    
    case 7:
            porta = analogRead (0);
            lcd_Shield();

            if (botao == "Cima"){
              
              lcd.clear();
              lcd.home();  
              lcd.print("Machado de Assis (X)"); 
              lcd.setCursor(0,1);  
              lcd.print("Castro Alves ()");
              
              flag = true;
              aux++;

            }

