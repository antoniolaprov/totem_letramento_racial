    		delay (200);
    		estado = 25;
    		aux =0; 
    
    		break;
    
    case 25:
            porta = analogRead (0);
            lcd_Shield();

            if (botao == "Cima"){
              
              lcd.clear();
              lcd.home();  
              lcd.print("Vaticano (X)"); 
              lcd.setCursor(0,1);  
              lcd.print("Andorra()");
              
              flag = true;
              aux++;

            }

            else if (botao == "Baixo"){
              
              lcd.clear();
              lcd.home();  
              lcd.print("Vaticano ()"); 
              lcd.setCursor(0,1);  
              lcd.print("Andorra (X)");
              
              flag = false;
              aux++;
              
            }
    
    		else if (botao == "Select"){
              if (aux !=0){
                if(flag == true){
                  lcd.clear();
              	  lcd.home();  
                  lcd.print("Acertou - Uhuu!"); 
                  lcd.setCursor(0,1);  
                  lcd.print("Sabe D+!");
                  
                  ponto++;
                  estado = 26;	
                  delay (3000);
                }
                
                if(flag == false){
                  lcd.clear();
              	  lcd.home();  
                  lcd.print("Errooouuuuu!!!"); 
                  lcd.setCursor(0,1);  
                  lcd.print("que triste");
                  
                  estado = 26;	
                  delay (3000);
                }
              }
              
              else{
                lcd.clear();
                lcd.home();  
                lcd.print("Que penaaa!!"); 
                lcd.setCursor(0,1);  
                lcd.print("Era facil!!!");
                
				estado = 26;	
                delay (3000);
              }
            }
    
    		else if (botao == "Esquerda"){
              estado = 3;
            }

            else if (botao != "vazio"){
              tecla_Error();
            }

            break;

    case 26: 
            lcd.clear();
            lcd.home();  
            lcd.print("Total: "); 
            lcd.setCursor(7,0);  
            lcd.print(ponto); 
            lcd.setCursor(9,0);  
            lcd.print("Pto");

            if (ponto >= 1){
              lcd.setCursor(0,1);  
              lcd.print("Meus parabeeens");
            }

            if (ponto < 1){
              lcd.setCursor(0,1);  
              lcd.print("tente outra ");
              } 
               delay (3000);
              estado = 27;
         break;
    //QUESTÃO 9-----------------------------------------------------------
    
   case 27: 
            lcd.clear();
            lcd.home();  
            lcd.print("Quiz 9:"); 
            lcd.setCursor(0,1);  
            lcd.print("Quantos ossos tem no corpo humano?"); 
            
    		delay (2000);
    
            for(int cont=0; cont <18; cont++){
    			lcd.scrollDisplayLeft();
    			delay (200); 
  			}
    		
    		delay (2000);
    
    		lcd.clear();
            lcd.home();  
            lcd.print("206 ()"); 
            lcd.setCursor(0,1);  
            lcd.print("103 ()");
    		
    		delay (200);
    		estado = 28;
    		aux =0; 
    
    		break;
    
    case 28:
            porta = analogRead (0);
            lcd_Shield();

            if (botao == "Cima"){
              
              lcd.clear();
              lcd.home();  
              lcd.print("206 (X)"); 
              lcd.setCursor(0,1);  
              lcd.print("103 ()");
              
              flag = true;
              aux++;

            }

            else if (botao == "Baixo"){
              
              lcd.clear();
              lcd.home();  
              lcd.print("206 ()"); 
              lcd.setCursor(0,1);  
              lcd.print("103 (X)");
              
              flag = false;
              aux++;
              
            }
    
    		else if (botao == "Select"){
              if (aux !=0){
                if(flag == true){
                  lcd.clear();
              	  lcd.home();  
                  lcd.print("Acertou - Uhuu!"); 
                  lcd.setCursor(0,1);  
                  lcd.print("Sabe D+!");
                  
                  ponto++;
                  estado = 29;	
                  delay (3000);
                }
                
                if(flag == false){
                  lcd.clear();
              	  lcd.home();  
                  lcd.print("Errooouuuuu!!!"); 
                  lcd.setCursor(0,1);  
                  lcd.print("SHIII kkkk");
                  
                  estado = 29;	
                  delay (3000);
                }
              }
              
              else{
                lcd.clear();
                lcd.home();  
                lcd.print("Que penaaa!!"); 
                lcd.setCursor(0,1);  
                lcd.print("Era muito facil!!!");
                
				estado = 29;	
                delay (3000);
              }
            }
    
    		else if (botao == "Esquerda"){
              estado = 3;
            }

            else if (botao != "vazio"){
              tecla_Error();
            }

            break;

    case 29: 
            lcd.clear();
            lcd.home();  
            lcd.print("Total: "); 
            lcd.setCursor(7,0);  
            lcd.print(ponto); 
            lcd.setCursor(9,0);  
            lcd.print("Pto");

            if (ponto >= 1){
              lcd.setCursor(0,1);  
              lcd.print("Meus parabeeens");
            }

            if (ponto < 1){
              lcd.setCursor(0,1);  
              lcd.print("tente outra ");
              } 
               delay (3000);
              estado = 30;
              break;
        //QUESTÃO 10-----------------------------------------------------------

     case 30: 
            lcd.clear();
            lcd.home();  
            lcd.print("Quiz Final:"); 
            lcd.setCursor(0,1);  
            lcd.print("Em qual temperatura a agua ferve?"); 
            
    		delay (2000);
    
            for(int cont=0; cont <18; cont++){
    			lcd.scrollDisplayLeft();
    			delay (200); 
  			}
    		
    		delay (2000);
    
    		lcd.clear();
            lcd.home();  
            lcd.print("100º C ()"); 
            lcd.setCursor(0,1);  
            lcd.print("80º C ()");
    		
    		delay (200);
    		estado = 31;
    		aux =0; 
    
    		break;
    
    case 31:
            porta = analogRead (0);
            lcd_Shield();

            if (botao == "Cima"){
              
              lcd.clear();
              lcd.home();  
              lcd.print("100º C (X)"); 
              lcd.setCursor(0,1);  
              lcd.print("80º C ()");
              
              flag = true;
              aux++;

            }

            else if (botao == "Baixo"){
              
              lcd.clear();
              lcd.home();  
              lcd.print("100 C ()"); 
              lcd.setCursor(0,1);  
              lcd.print("80 C (X)");
              
              flag = false;
              aux++;
              
            }
    
    		else if (botao == "Select"){
              if (aux !=0){
                if(flag == true){
                  lcd.clear();
              	  lcd.home();  
                  lcd.print("Acertou - Tem"); 
                  lcd.setCursor(0,1);  
                  lcd.print("meu respeito");
                  
                  ponto++;
                  estado = 32;	
                  delay (3000);
                }
                
                if(flag == false){
                  lcd.clear();
              	  lcd.home();  
                  lcd.print("Errooouuuuu!!!"); 
                  lcd.setCursor(0,1);  
                  lcd.print("kkkk nunca");
                  
                  estado = 32;	
                  delay (3000);
                }
              }
              
              else{
                lcd.clear();
                lcd.home();  
                lcd.print("Que penaaa!!"); 
                lcd.setCursor(0,1);  
                lcd.print("Era muito facil!!!");
                
				estado = 32;	
                delay (3000);
              }
            }
    
    		else if (botao == "Esquerda"){
              estado = 3;
            }

            else if (botao != "vazio"){
              tecla_Error();
            }

            break;

    case 32: 
            lcd.clear();
            lcd.home();  
            lcd.print("Total: "); 
            lcd.setCursor(7,0);  
            lcd.print(ponto); 
            lcd.setCursor(9,0);  
            lcd.print("Pto");

            if (ponto >= 1){
              lcd.setCursor(0,1);  
              lcd.print("Resultado final");
            }

            if (ponto < 1){
              lcd.setCursor(0,1);  
              lcd.print("tente outra ");
              } 
               delay (3000);
              estado = 33;
           break;
  }
}
  
  
void lcd_Shield () {

   botao = "vazio";

   if (porta < 100) {  
      botao = "Direita";  
   }  
   else if (porta < 200) {  
      botao = "Cima";  
   }  
   else if (porta < 400){  
      botao = "Baixo";  
   }  
   else if (porta < 600){  
      botao = "Esquerda";  
   }  
   else if (porta < 800){  
      botao = "Select";  
   } 
}

void tecla_Error(){
  lcd.clear();
  lcd.home();
  lcd.print (" Tecla Errada!! ");
  delay (1000); 
}
